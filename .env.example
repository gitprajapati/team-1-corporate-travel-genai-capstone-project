# -----------------------------
# Core application
# -----------------------------
API_PORT=8000
WEB_PORT=5173
SECRET_KEY=change-me
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
SESSION_TIMEOUT_HOURS=1

# -----------------------------
# Database (PostgreSQL)
# -----------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=travel_db
DB_USER=travel_user
DB_PASSWORD=change-me
DB_SSLMODE=require
DB_MINCONN=1
DB_MAXCONN=10

# Optional: dedicated credentials for MCP services
AIRLINES_DB_HOST=localhost
AIRLINES_DB_PORT=5432
AIRLINES_DB_NAME=airline_db
AIRLINES_DB_USER=airline_user
AIRLINES_DB_PASSWORD=change-me
AIRLINES_DB_SSLMODE=require

HOTEL_DB_HOST=localhost
HOTEL_DB_PORT=5432
HOTEL_DB_NAME=hotel_db
HOTEL_DB_USER=hotel_user
HOTEL_DB_PASSWORD=change-me
HOTEL_DB_SSLMODE=require

# -----------------------------
# Azure OpenAI / LLM
# -----------------------------
AZURE_API_KEY=your-azure-openai-key
AZURE_API_BASE=https://your-resource-name.openai.azure.com/
AZURE_API_VERSION=2024-05-01-preview
AZURE_MODEL=azure/gpt-4o
AZURE_EMBEDDING_DEPLOYMENT=text-embedding-3-small
AZURE_EMBEDDING_MODEL=text-embedding-3-small
LLM_TEMPERATURE=0.3
LLM_VERBOSE=false
EMBEDDING_CHUNK_SIZE=2048

# -----------------------------
# Retrieval (Milvus)
# -----------------------------
MILVUS_URI=127.0.0.1:19530
MILVUS_TOKEN=change-me
MILVUS_COLLECTION_NAME=travel_policy_embeddings
MILVUS_DIM=1536
MILVUS_VECTOR_FIELD=vector
MILVUS_TEXT_FIELD=text
RAG_TOP_K=3
RAG_CONTEXT_MAX_CHARS=1800

# -----------------------------
# MCP configuration
# -----------------------------
AIRLINE_MCP_PORT=8001
HOTEL_MCP_PORT=8002
MCP_AIRLINE_URL=http://127.0.0.1:8001
MCP_HOTEL_URL=http://127.0.0.1:8002
MCP_AIRLINE_COMMAND=npx
MCP_AIRLINE_ARGS=-y,mcp-remote,http://127.0.0.1:8001/mcp
MCP_HOTEL_COMMAND=npx
MCP_HOTEL_ARGS=-y,mcp-remote,http://127.0.0.1:8002/mcp

# -----------------------------
# Object storage (Milvus dependencies)
# -----------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# -----------------------------
# Frontend settings
# -----------------------------
VITE_API_BASE_URL=http://127.0.0.1:8000

# -----------------------------
# Misc
# -----------------------------
PYTHONPATH=src
